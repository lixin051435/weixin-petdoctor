<view class="main">
  <view class='data'>

    <view class='item'>
      <text>旧密码</text>
      <input type='text' value="{{oldPass}}" bindinput="bindOldPass" placeholder='请填写旧密码'></input>
    </view>
     <view class='item'>
      <text>新密码</text>
      <input type='text' value="{{newPass}}" bindinput="bindNewPass" placeholder='请填写新密码'></input>
    </view>
    
  </view>
  <view class='btn active' bindtap='submitFun'>确认</view>
</view>